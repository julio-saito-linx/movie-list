<div id="search-result" class="col-md-12">
  <div class="row">
    <div class="row searchResultsNav">

      <div class="col-md-4">
        <button class="btn btnPrevPage">
          <span class="glyphicon glyphicon-chevron-left"></span>
        </button>
        <button class="btn btnNextPage">
          <span class="glyphicon glyphicon-chevron-right"></span>
        </button>
      </div>

      <div class="col-md-4 searchLog">
        <div class="row">
          <div class="col-md-12">query: {{ query }}</div>
        </div>
        <div class="row">
          <div class="col-md-12">sort: {{ sort }}</div>
        </div>
        <div class="row">
          <div class="col-md-3">offset: {{ offset }}</div>
          <div class="col-md-3">total: {{ total }}</div>
        </div>
      </div>

    </div>

  </div>

  <br>
  
  <table class="table table-bordered table-hover table table-striped">
    <thead>
      <tr>
        <th class='rating'>
          rating
        </th>
        <th class='year'>
          year
        </th>
        <th>
          title
        </th>
        <th>
          pt-BR title
        </th>
        <th>
          director
        </th>
        <th>
          imdb
        </th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>